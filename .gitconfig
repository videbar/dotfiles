[init]
	defaultBranch = main

[user]
	name = Pedro Videgain Barranco
	email = pedro@vide.bar

[core]
	editor = vim
	pager = delta

; If present, load a local git config file that will overwrite the configuration. The
; local config will not be committed to the repo.
[include]
	path = $HOME/.local.gitconfig

[alias]
	graph = log --oneline --graph --decorate
	ac = commit -am
	slog = log --oneline -n 5
	last = log -n 1

[interactive]
	diffFilter = delta --color-only

; Load custom themes.
[include]
    path = $HOME/.tokyonight_night.gitconfig
    path = $HOME/.tokyonight_storm.gitconfig
    path = $HOME/.tokyonight_moon.gitconfig
    path = $HOME/.tokyonight_day.gitconfig

[delta]
	side-by-side = true
	line-numbers-left-format = ""
	line-numbers-right-format = "â”‚ "
	syntax-theme = tokyonight_storm
