[init]
	defaultBranch = main

[user]
	name = Pedro Videgain Barranco
	email = pedro@vide.bar

[core]
	editor = vim
	pager = delta

; Load this config if using the work computer. It will overwrite previously defined
; options.
; [includeIf "gitdir/i:home/p.videgain.barranco/**"]
; 	path = ~/.work-gitconfig

[alias]
	graph = log --oneline --graph --decorate
	ac = commit -am
	slog = log --oneline -n 5
	last = log -n 1

[interactive]
	diffFilter = delta --color-only

[delta]
	side-by-side = true
	line-numbers-left-format = ""
	line-numbers-right-format = "â”‚ "
	syntax-theme = Nord
